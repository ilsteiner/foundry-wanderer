{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["DOM", "ES2022"],
      "types": ["@league-of-foundry-developers/foundry-vtt-types"],
      "moduleResolution": "node",
      "strict": true,
      "outDir": "./scripts/dist",
      "rootDir": "./scripts/src",
      "noEmit": false,
      "sourceMap": false,
      "inlineSourceMap": true,
      "resolveJsonModule": true,
    "esModuleInterop": true
    },
    "include": ["scripts/src"],
    "exclude": ["node_modules"]
  }